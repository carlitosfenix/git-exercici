        <TextBlock x:Name="txtBlockTitulo" HorizontalAlignment="Left" Margin="335,29,0,0" TextWrapping="Wrap" Text="RESTAURANTE" VerticalAlignment="Top" RenderTransformOrigin="-0.435,-3.58"/>
