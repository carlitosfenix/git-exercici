        <Calendar x:Name="calExam"   HorizontalAlignment="Left" Margin="208,539,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnRegistrarNewExam" Content="Add Exam" HorizontalAlignment="Left" Margin="502,687,0,0" VerticalAlignment="Top" Width="167" Click="BtnRegistrarNota_Click" RenderTransformOrigin="0.528,-0.109"/>

